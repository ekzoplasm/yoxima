{# app/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
<head>
<title>Yoxima blog</title>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>{% block title %}YoximaBlog{% endblock %}</title>
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap.css') }}" type="text/css" />
{% endblock %}
</head>
<body>
  <div class="container">
    <div id="header" class="jumbotron">
    <h1>Yoxima Blog</h1>
    <p>A nice adventure to discover Symfony 2 and how it works !!!</p>
    <p><a class="btn btn-primary btn-large" href="javascript:alert('Ã§a marche')">Test</a></p>
    </div>
    <div class="row">
        <div id="menu" class="col-xs-6 col-md-4">
            <h3>Le blog</h3>
            <ul class="nav nav-pills nav-stacked">
                <li><a href="{{ path('yoxima_blog_homepage') }}">Accueil du blog</a></li>
                <li><a href="{{ path('yoxima_blog_add') }}">Ajouter un article</a></li>
            </ul>
            
            {{ render(controller("yoximaBlogBundle:Blog:menu",{'nb':3})) }}
        </div>
        <div id="content" class="col-xs-12 col-md-8">
            {% block body %}
            {% endblock %}
        </div>    
    </div>

    <hr/>

    <footer>
    <p>{{ owner }}</p>
    </footer>
  </div>
    {% block javascript %}
        <script src="{{ asset('js/jquery2') }}" type="text/javascript" ></script>
        <script src="{{ asset('bootstrao/js/bootstrap.js') }}" type="text/javascript" ></script>
    {% endblock %}
</body>
</html>
