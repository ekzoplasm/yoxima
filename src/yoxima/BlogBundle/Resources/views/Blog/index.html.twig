{# src/yoxima/BlogBundle/Resources/views/Blog/index.html.twig #}

{% extends "yoximaBlogBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - home{% endblock %}

{% block yoximablog_body %}
<h2>Liste des articles</h2>
<ul>
    {% for article in articles %}
        <li><a href="{{ path('yoxima_blog_view',{'id':article.id}) }}">{{ article.titre }}</a> par {{ article.author }}, le {{ article.date|date('d/m/Y') }}</li>
        {% else %}
        <li>Aucun article actuellement</li>
    {% endfor %}
</ul>
{% endblock %}